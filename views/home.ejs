<%- include("partials/header"); -%>

  <h1>Home</h1>
  <p>
    <%= startingContent %>
  </p>

  <% if (posts && posts.length> 0) { %>
    <% posts.forEach(function (post) { %>
      <h1>
        <%= post.title %>
      </h1>
      <p>
        <%= post.content.substring(0, 100) + " ..." %>
      </p>
      <a href="/posts/<%= post._id %>">Read More</a>
      <% }); %>
        <% } else { %>
          <p>No posts found.</p>
          <% } %>

            <%- include("partials/footer"); -%>